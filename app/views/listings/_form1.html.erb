<div class="form_1">
    
    <div class="error message">
        <% if @listing.errors.any? %>
            <% for error in @listing.errors.full_messages %>
                <p><%= error %></p>
            <% end %>
        <% end %>
    </div>
    
    <div class="form_body">
    <%= form_with model: listing, url: {action: url},  local: true do |form|%>
    <%# url is signed to different method depends on which method url is handling. refer to new/edit/more.html.erb for more info %>
        <div class="form_section">
            <%= form.label :artist, class: "form_title"%>
            <%= form.text_field :artist, class: "form_field"%>
        </div>

        <div class="form_section">
            <%= form.label :title, "Album", class: "form_title"%>
            <%= form.text_field :title, class: "form_field" %>
        </div>


        <div class="form_section">
            <%= form.label :format_id, class: "form_title"%>
            <%= form.select(:format_id, @formats.map{|f| [f.name, f.id]})%>
        </div>
        
        
        <div class="form_section">
            <%= form.label :year, class: "form_title" %>
            <%= form.text_field :year, class: "form_field" %>
        </div>

        <div class="form_section">
            <%= form.label :price, "Price in $aud", class: "form_title"%>
            <%= form.number_field :price, min: 0, class: "form_field"%> 
            <p>(whole dollars only)</p>
        </div>
 
        <div class="form_section_conditions">
            <p class="form_condition_title" >Album Condition</p>
            <div class="grand_radion_selection">
                <% @conditions.each do |option| %>
                <div class="radio_section">
                    <%= form.radio_button :condition, option, class:"radio_button"%>
                    <%= form.label "condition_#{option}".to_sym, option, class:"radio_option" %>
                </div>
            <% end %>
            </div>
        </div>

        <div class="form_section">
            <%= form.label :description, class: "form_title"%>
            <%= form.text_area :description, class: "form_field_description"%>
        </div>

        <div class="form_section">
            <%= form.submit "Continue", class: "form_title_submit" %>
        </div>
    <% end %>
    </div>
</div>