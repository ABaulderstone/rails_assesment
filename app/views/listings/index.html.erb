<h1>Availible Records</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.submit %>
<% end %>


<% @results.each do |result| %>
<ul>
<%unless result.purchased? %>
<li>
<p>Title: <%= result.title %> | Artist: <%= result.artist%> | <%= link_to "go to album ", listing_path(result.id) %></p>
</li>
<%end%>
</ul>
<% end %>