<div class="user_page">

    <h1> <%=current_user[:username]%> 's Profile <h1>
    <div class="user_info">
        <div class="user_pic"><%= image_tag return_avatar(@user)%></div>
        <div class="user_details">
            <p>Username: <%= current_user[:username] %> </p>
            <p>Location: <%= current_user[:location] %> </p>
            <p> Collections: <%= link_to 'My Favorites Albums', my_favorites_path %></p>
        </div>
    </div>

    <h2> My Current Listings </h2>
    <div class = "user_current_listings">
        <% for listing in @user_listings %>
            <div class='card'>
            <%if listing.cover.attached?%>
            <%= link_to image_tag(listing.cover), listing_path(listing.id), class: "album_cover" %>
            <%else%>
            <%= link_to image_tag('coverart'), listing_path(listing.id), class: "album_cover" %>
            <%end%>
            <p> Album: <%= listing.title%> |  Artist: <%= listing.artist%> </p>
            </div>
        <% end %>
    </div>
</div>

